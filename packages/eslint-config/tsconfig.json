{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./build",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": false,
        "incremental": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "build/**/*",
        "node_modules/**/*",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}