{
    "name": "@igor-siergiej/api-utils",
    "version": "0.0.3",
    "description": "Shared API utilities for Node services",
    "author": "igor-siergiej",
    "license": "AGPL-3.0 license",
    "repository": {
        "type": "git",
        "url": "https://github.com/igor-siergiej/im-apps-utils.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "main": "build/index.js",
    "module": "build/index.mjs",
    "types": "build/index.d.ts",
    "exports": {
        ".": {
            "import": "./build/index.mjs",
            "require": "./build/index.js",
            "types": "./build/index.d.ts"
        }
    },
    "files": [
        "build"
    ],
    "scripts": {
        "build": "tsup",
        "clean": "rimraf build",
        "prepack": "yarn clean && yarn build",
        "test": "vitest run --coverage",
        "test:watch": "vitest"
    },
    "sideEffects": false,
    "devDependencies": {
        "@types/node": "^24.3.0",
        "@vitest/coverage-v8": "^3.2.4",
        "rimraf": "^6.0.1",
        "tsup": "^8.5.0",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "mongodb": "^6.19.0"
    }
}
