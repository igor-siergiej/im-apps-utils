{
    "name": "@im-apps/api-utils",
    "version": "0.1.0",
    "description": "Shared API utilities for Node services",
    "main": "build/index.cjs",
    "module": "build/index.js",
    "types": "build/index.d.ts",
    "exports": {
        ".": {
            "import": "./build/index.js",
            "require": "./build/index.cjs",
            "types": "./build/index.d.ts"
        }
    },
    "files": [
        "build"
    ],
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "scripts": {
        "build": "tsup",
        "clean": "rimraf build",
        "prepack": "yarn clean && yarn build"
    },
    "license": "MIT",
    "sideEffects": false,
    "devDependencies": {
        "rimraf": "^6.0.1",
        "tsup": "^8.5.0",
        "typescript": "^5.9.2"
    }
}
