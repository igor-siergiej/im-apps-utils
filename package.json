{
    "name": "im-apps-utils",
    "private": true,
    "version": "0.0.6",
    "description": "Monorepo for shared utilities across IM Apps projects",
    "packageManager": "yarn@4.9.2",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "yarn workspaces foreach -A run build",
        "clean": "yarn workspaces foreach -A run clean",
        "lint": "eslint . --ext .ts,.mts,.cts",
        "lint:fix": "eslint . --ext .ts,.mts,.cts --fix"
    },
    "devDependencies": {
        "@eslint/js": "^9.33.0",
        "@stylistic/eslint-plugin": "^5.2.3",
        "eslint": "^9.33.0",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unused-imports": "^4.1.4",
        "rimraf": "^6.0.1",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.39.0"
    }
}
